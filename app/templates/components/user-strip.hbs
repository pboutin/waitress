<div class="user-strip">
    {{#each users as |user|}}
        {{#tooltip-container text=user.name class="user"}}
            {{gravatar-image email=user.email size=size class="_avatar"}}
        {{/tooltip-container}}
    {{/each}}

    {{#if primaryUser}}
        {{#tooltip-container text=primaryUser.name suffix=(t 'user-strip.owner') class="user user-primary"}}
            {{gravatar-image email=primaryUser.email size=size class="_avatar"}}
        {{/tooltip-container}}
    {{/if}}
</div>
